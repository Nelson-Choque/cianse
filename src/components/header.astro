<script type="module">

  const swiper = new Swiper(".portada_swiper", {
    // Optional parameters
    direction: "horizontal",
    loop: true,

    autoplay: {
      delay: 2000, // tiempo en milisegundos entre cada transición automática
      disableOnInteraction: false, // para permitir que el usuario interactúe con el swiper mientras se reproduce automáticamente
    },

    breakpoints: {
      768: {
        slidesPerView: 1,
        slidesPerGroup: 1,
        // spaceBetween: 20,
      },
      1200: {
        slidesPerView: 1,
        slidesPerGroup: 1,
        // spaceBetween: 20,
      },
    },

    // If we need pagination
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },

    // Navigation arrows
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },

    // And if we need scrollbar
  });

  const $headerNav = document.getElementById("header_nav");
  const $navBotonMobile = document.getElementById("nav_boton-mobile");
  const $navMenu = document.getElementById("nav_menu");


  const activarEventoScroll= ()=>{

    if( !(location.pathname === "/") ){

      document.removeEventListener("scroll",activarEventoScroll)
      
      console.log("eliminado")
      $headerNav.classList.add("header_nav--active");

      return "";


    }

    activarBackgroundNavbar();
}


  
  document.addEventListener("DOMContentLoaded",()=>{
    
    activarEventoScroll();
    
  })
    

  document.addEventListener("scroll", activarEventoScroll);

  $navBotonMobile.addEventListener("click", () => {


    $headerNav.classList.add("header_nav--active");

    desactivarMenu($navMenu);
  });

  $navMenu.addEventListener("click",(e)=>{

    if( !(e.target.classList.contains("nav_menu_item_link") )){

      return "";
    }


    desactivarMenu();
  })



  const activarBackgroundNavbar = () => {
    if ( !(scrollY === 0)) {

      $headerNav.classList.add("header_nav--active");
      return "";
    }

    if($navMenu.classList.contains("nav_menu--active")){
        
      $headerNav.classList.add("header_nav--active");
      return "";

    }   


    $headerNav.classList.remove("header_nav--active");

  };

  const desactivarMenu = (menu) => {

    
    if( !(window.innerWidth < 993) ){

      return "";

    }

    $navMenu.classList.toggle("nav_menu--active");
  };



</script>

